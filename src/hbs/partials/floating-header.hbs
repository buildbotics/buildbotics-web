<div class="floating-header">
  <div class="floating-header-logo">
    <a class="site-logo" href="/">
      <img src="/images/buildbotics_logo-40x40.png" alt="Buildbotics logo"/>
      <div class="left">Build</div><div class="right">botics</div>
    </a>
  </div>

  <span class="floating-header-divider">&mdash;</span>
  <div class="floating-header-title">{{title}}</div>

  <div class="floating-header-share">
    <div class="floating-header-share-label">
      Share this <div class="fa fa-hand-pointer-o"></div>
    </div>

    <a class="floating-header-share-tw"
       href="//twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
       onclick="window.open(this.href, 'share-twitter', 'width=550,height=235');return false;">
      <div class="fa fa-twitter"></div>
    </a>

    <a class="floating-header-share-fb"
       href="//www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
       onclick="window.open(this.href, 'share-facebook','width=580,height=296');return false;">
      <div class="fa fa-facebook-square"></div>
    </a>
  </div>

  <progress id="reading-progress" class="progress" value="0">
    <div class="progress-container">
      <span class="progress-bar"></span>
    </div>
  </progress>
</div>
