doctype html
html
  head
    meta(charset='UTF-8')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="icon", href="images/favicon.ico")
    title Buildbotics Open-Source CNC Controller

    style: include:stylus ../stylus/style.styl

    link(href='//fonts.googleapis.com/css?family=Roboto+Slab|Open+Sans|Lato|' +
      'Audiowide'
      rel='stylesheet' type='text/css')

    - var cdn = '//cdnjs.cloudflare.com/ajax/libs'
    link(rel='stylesheet'
      href=cdn + '/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet',
      href=cdn + '/OwlCarousel2/2.3.4/assets/owl.carousel.min.css')

  body
    #page
      include ./header.pug

      #content(class="%PAGE%-page")
        .page-content
          include ./pages/%PAGE%.pug

      include ./footer.pug

    - var cdn = '//cdnjs.cloudflare.com/ajax/libs'
    script(src=cdn + '/jquery/3.3.1/jquery.min.js')
    script(src=cdn + '/vue/0.11.8/vue.min.js')
    script(src=cdn + '/OwlCarousel2/2.3.4/owl.carousel.min.js')

    script.
      $(function () {
        $('.owl-carousel').owlCarousel({
          dots: false,
          items: 2,
          loop: true,
          margin: 5,
          autoWidth: true,
          nav: true,
          navText: [
            '<i class="fa fa-chevron-left" aria-hidden="true"></i>',
            '<i class="fa fa-chevron-right" aria-hidden="true"></i>'
          ]
        });
      })

    script(async,
      src="https://www.googletagmanager.com/gtag/js?id=UA-57023811-3")
    script
      | window.dataLayer = window.dataLayer || [];
      | function gtag(){dataLayer.push(arguments);}
      | gtag('js', new Date());
      | gtag('config', 'UA-57023811-3');
