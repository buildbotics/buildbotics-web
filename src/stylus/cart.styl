#header .cart
  display none

.cart
  position fixed
  z-index 10000
  top 0
  right 0
  color medium_text_color
  cursor pointer
  background header_color

  height header_height - 20px
  width 60px
  border-bottom 1px solid header_border_color
  border-left 1px solid header_border_color
  padding 10px
  transition-duration 500ms

  &:hover
    width 400px
    height 400px
    border-bottom 2px solid header_border_color
    border-left 2px solid header_border_color

  .quantity
    font-size 20pt
    font-weight bold
    color link_color
    display inline
    margin-right 0.25em

  .fa
    font-size 24pt
