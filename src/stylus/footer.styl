.site-footer
  color light_text_color
  min-height 1.5em
  border-top 1px solid border_color
  padding 0 1em
  margin-top 1em

  .site-footer-content
    font-size 10pt
    padding 1em 0
    margin 0 auto
    max-width page_width

    > *
      display inline-block

    .copyright
      margin-right 1em
      white-space nowrap

    nav
      margin 0 0.75em


@media (max-width: 500px)
  .site-footer
    .copyright
      display block
