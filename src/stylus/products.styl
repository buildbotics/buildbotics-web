@import "config";
@import "review-stars";

.products
  display flex
  flex-wrap wrap
  gap 10px
  flex-direction row

  .product
    border-radius 5px
    border 1px solid #f5f5f5
    width 215px
    background #f7f7f7

    a, a:visited
      color black !important
      text-decoration none

    .product-image
      background #fff
      text-align center
      padding 1em 10px
      width 195px
      height 160px
      border-top-left-radius 5px
      border-top-right-radius 5px

    .product-body
      padding 1em 0.5em
      display flex
      flex-direction column
      gap 0.25em

      .product-name
        font-size 12pt
        height 2.75em

        &:hover
          color link_hover_color

      .product-price
        font-size 18pt

      .product-rating
        font-size 11pt
        color link_hover_color
        height 2em

        .review-stars
          display inline-block
          margin-right 0.25em
          vertical-align sub

      .product-stock
        font-size 10pt
