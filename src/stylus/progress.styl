.progress
  position absolute
  right 0
  bottom -1px
  left 0
  width 100%
  height 2px
  border none
  background transparent
  appearance none

  &::-webkit-progress-bar
    background-color transparent

  &::-webkit-progress-value
    background-color #e5aa3d

  &::-moz-progress-bar
    background-color #e5aa3d

.progress-container
  position absolute
  top 0
  left 0
  display block
  width 100%
  height 2px
  background-color transparent

.progress-bar
  display block
  width 50%
  height inherit
  background-color #e5aa3d
