@import "global"

body
  background #fdfdfd
  img
    font-size 0

.img
  display block
  width 100%
  height 100%
  background-position center center
  background-size cover
  border-radius 100%

.hidden
  visibility hidden
  position absolute
  text-indent -9999px

.site-wrapper
  display flex
  flex-direction column
  min-height 100vh

.site-main
  z-index 100
  flex-grow 1

.outer
  position relative
  padding 0 4vw

.inner
  margin 0 auto
  max-width 900px
  width 100%

@import "author"
@import "post-card"
@import "post"
@import "subscribe"
@import "author-card"
@import "floating-header"
@import "progress"
@import "read-next"
@import "error"

h1, h2, h3, h4, h5, h6
  color #666
  font-weight normal

.mailinglist
  max-width 450px
  min-width 100%
  margin 1em auto

  form
    display block
    position relative

  input
    padding 0.4em
    border 1px solid #abb0b2
    border-radius 3px

button
  border 1px solid #ddd
  border-radius 3px
  background-color #fcfcfc
  background-image linear-gradient(#fcfcfc, #eee)
  padding 0.25em 1em
  color #e5aa3d
  cursor pointer
  line-height 1.5em

  &:hover
    color #428bca
    background-color #ddd
    background-image linear-gradient(#ececec, #ddd)
